{
  "name": "fintech-app-backend",
  "version": "1.0.0",
  "description": "Paystack-integrated fintech app backend with microservices architecture",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "ts-node database/migrate.ts",
    "db:seed": "ts-node database/seed.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db": "prisma db push",
    "seed": "ts-node prisma/seed.ts",
    "simple-seed": "ts-node prisma/simple-seed.ts",
    "minimal-seed": "ts-node prisma/minimal-seed.ts"
  },
  "keywords": [
    "fintech",
    "paystack",
    "payments",
    "analytics",
    "fraud-detection"
  ],
  "author": "Fintech App Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "amqplib": "^0.10.8",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "redis": "^5.8.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
